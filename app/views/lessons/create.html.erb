<% provide :title, t(:lesson) %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @lesson do |f| %>

        <% @words.each do |word| %>
            <ul>
              <%= f.fields_for :lesson_words do |lesson_words_form| %>
                  <li>
                    <%= word.content %>
                    <%= lesson_words_form.hidden_field :word_id, value: word.id %>
                  </li>
              <% end %>
            </ul>

            <% word.word_answers.each do |word_answer| %>
                <ul>
                  <%= f.fields_for :lesson_word_answers do |lesson_word_answers_form| %>
                      <li>
                        <%= lesson_word_answers_form.radio_button :word_answer_id, word_answer.id %> <%= word_answer.content %>
                      </li>
                  <% end %>
                </ul>
            <% end %>

        <% end %>

    <% end %>
  </div>
</div>