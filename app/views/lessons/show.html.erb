<% provide :title, t(:lesson) %>

<% if params[:id] %>
  <% if params[:generate_result] %>
    <h3 id="test"><%= t :result %>: <%= @lesson.result %></h3>
  <% else %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">

        <% x=0 %>
        <%= form_for @lesson do |f| %>
          <%= f.fields_for :lesson_words do |lesson_words_forms| %>
            <div id="<%= x+=1 %>">
              <%= lesson_words_forms.object.word.content %>
              <div>
                <%= lesson_words_forms.collection_radio_buttons :word_answer_id, lesson_words_forms.object.word.word_answers, :id, :content do |block| %>
                  <%= block.label {block.radio_button + block.text} %>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>

      </div>
    </div>
  <% end %>
<% else %>
  <h3><%= t :category_complete %></h3>
<% end %>